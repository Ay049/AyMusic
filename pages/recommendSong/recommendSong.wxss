/* pages/recommendSong/recommendSong.wxss */
.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.recommendSongContainer .header image {
  width: 100%;
  height: 100%;
}

.recommendSongContainer .header text {
  position: absolute;
  top: 50%;
  left: 50%;
  font-size: 36rpx;
  transform: translate(-40%, -50%);
  color: #fff;
}

/* 播放列表 */
.ListContainer {
  position: relative;
  top: -20rpx;
  padding: 0 3%;
  border-radius: 30rpx 30rpx 0 0;
  background-color: #fff;
  z-index: 2;
}

.listHeader {
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
}

.listHeader .changeMore {
  float: right;
}
.listScroll {
  height: calc(100vh - 380rpx);
}
.scrollitem {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.scrollitem image,
.scrollitem .iconfont {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.scrollitem .iconfont {
  line-height: 80rpx;
  text-align: right;
}

.musicInfo {
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: left;
}

.musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}